<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
>

    <TextView
        android:id="@+id/select_level_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="@string/SELECT_LEVEL_DIALOG_CAPTION"
    />

    <EditText
        android:id="@+id/select_level_level_field"
        android:layout_below="@+id/select_level_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/select_level_caption"
        android:inputType="number"
        android:numeric="integer"
    />

    <Button
        android:id="@+id/select_level_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/CANCEL_BUTTON_CAPTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80sp"
        />

    <Button
        android:id="@+id/select_level_ok"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/select_level_cancel"
        android:text="@string/OK_BUTTON_CAPTION"
        android:minWidth="80sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>